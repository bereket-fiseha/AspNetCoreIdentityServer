@model LoginViewModel
@{ Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="~/css/loginstyles.css" rel="stylesheet" />
</head>
<body>

    <div class="row">

        <div class="col-md-4 col-sm-12">
            <img style="margin-top:250px;margin-left:-100px;" src="~/img/redat-logo2.png" width="700" height="700" />
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-4 col-sm-12" style="margin-top:100px">

            <div class="row">
                <div class="col-md-2"></div>
                <div>
                    <img width="200" height="100" src="~/img/redat-logo.png" />
                    <p class="mt-5">Welcome back! Please login to your account.</p>

                </div>
            </div>
            <form asp-route="Login">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <div class="row">
                    <i class="fas fa-user"></i>

                    <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
              </div>
                    </div>
                <div class="form-group">
                    <div class="row">
                        <i class="fas fa-key"></i>


                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">

                    </div>
                       </div>
                @if (Model.AllowRememberLogin)
                {
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="RememberLogin">
                            <label class="form-check-label" asp-for="RememberLogin">
                                Remember My Login
                            </label>
                        </div>
                    </div>
                }

                
                <button class="btn btn-primary" name="button" value="login">Login</button>
                <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
            </form>
        </div>

        <div class="col-md-2"></div>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>

    html, body {
        background-color: #144c49 !important;
        height: 100%;
        font-family: 'Numans', sans-serif;
        color: white;
    }


    .login-input > input {
        width: 90%;
        border-radius: 6px;
        border-bottom: 1px solid #1890ff;
        padding: 5px 10px;
        outline: none;
    }





    .remember {
        color: white;
    }

        .remember input {
            width: 20px;
            height: 20px;
            margin-left: 15px;
            margin-right: 5px;
        }

    .login_btn {
        height: 50px;
        border: solid 1px #fff;
        color: #fff;
        background-color: #144c49;
        width: 110px;
    }

        .login_btn:hover {
            color: black;
            background-color: white;
        }

    .links {
        color: white;
    }

        .links a {
            margin-left: 4px;
        }
</style>